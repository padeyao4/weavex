{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-minimize",
    "core:window:allow-maximize",
    "core:window:allow-close",
    "core:window:allow-toggle-maximize",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:write-files",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$DOCUMENT/*"
        },
        {
          "path": "$DOCUMENT/PossibleData/**"
        }
      ]
    },
    "log:default"
  ]
}
