{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Weavex",
  "identifier": "padeyao4.weavex",
  "build": {
    "beforeDevCommand": "npm run vue-serve",
    "devUrl": "http://localhost:3300",
    "beforeBuildCommand": "npm run vue-build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Weavex",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDA5MTM5NjY4Qjc5NTk3QUMKUldTc2w1VzNhSllUQ1JUQ3JIWjhzZmtnYjZrZFhKMGZpMGl0QzRPOUU4NGwyTEdDNC9jWFFNaSsK",
      "endpoints": [
        "https://github.com/padeyao4/weavex/releases/latest"
      ]
    }
  }
}
